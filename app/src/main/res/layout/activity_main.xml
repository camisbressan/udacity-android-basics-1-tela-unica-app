<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:autoLink="web"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/sobre"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="A POSITIV.A nasceu em 2014 com o objetivo de restaurar o equilíbrio entre humanidade e natureza através de produtos e serviços."/>

    <LinearLayout
        android:id="@+id/layout_endereco"
        android:layout_below="@id/sobre"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon_pin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/sobre"
            android:src="@drawable/icon_pin"/>

        <TextView
            android:id="@+id/endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sobre"
            android:layout_toRightOf="@id/icon_pin"
            android:text="Rua Bartolomeu Paes, 136 - Vila Anastácio, São Paulo, SP - CEP 05092-000"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_site"
        android:layout_below="@id/layout_endereco"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

    <ImageView
        android:id="@+id/icon_web"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/icon_pin"
        android:src="@drawable/icon_web"/>

    <TextView
        android:id="@+id/site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/endereco"
        android:layout_toRightOf="@id/icon_web"
        android:clickable="true"
        android:autoLink="web"
        android:text="positiva.eco.br"
        android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_phone"
        android:layout_below="@id/layout_site"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

    <ImageView
        android:id="@+id/icon_phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/icon_web"
        android:src="@drawable/icon_phone"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/site"
        android:layout_toRightOf="@id/icon_phone"
        android:text="(11) 99129-5926"
        android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_horario"
        android:layout_below="@id/layout_phone"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

    <ImageView
        android:id="@+id/icon_clock"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/icon_phone"
        android:src="@drawable/icon_clock"/>

    <TextView
        android:id="@+id/horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_toRightOf="@id/icon_clock"
        android:text="08:30–19:00"
        android:layout_marginLeft="10dp" />
    </LinearLayout>

</RelativeLayout>